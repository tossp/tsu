[*]
charset=utf-8
end_of_line=lf
insert_final_newline=false
indent_style=space
indent_size=4

[{.babelrc,.stylelintrc,.eslintrc,jest.config,*.bowerrc,*.jsb3,*.jsb2,*.json}]
indent_size=2

[{jshint.json,*.jshintrc}]
indent_size=2

[{tsconfig.spec.json,tsconfig.app.json,tsconfig.json,tsconfig.e2e.json}]
indent_size=2

[{*.ddl,*.sql}]
indent_size=2

[*.js.map]
indent_size=2

[*.scss]
indent_size=2

[*.go]
tab_width=4

[{*.yml,*.yaml}]
indent_size=2
[Makefile]
indent_style=tab
indent_size=4

